<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">

<html lang="en">

<head>

	<meta http-equiv="content-type" content="text/html; charset=utf-8">

	<title>Current TV Conversation Ad</title>
    <link type="text/css" rel="stylesheet" href="http://www.talkingpointsmemo.com/tpm1020-inside.css?v=2.10"> 
    <link type="text/css" rel="stylesheet" href="conversation_ad.css">
    <script>

      var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-927537-1']);
			_gaq.push(['_setDomainName', '.talkingpointsmemo.com']);
			_gaq.push(['_setAllowHash', false]);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>

</head>

    <body style="background-color:white;">
        <div class="grid_4" style="margin:0;">
            <div id="conversation-ad">
                <div id="conversation-ad-header">
                    <a href="http://current.com/shows/countdown/" target="_blank"><img src="countdown_header.jpg" alt="Sponsored by Current TV"/></a>
                </div>
                <div class="conversation-ad-scroller up-scroller">
                   &#9650; scroll up 
                </div>
                <div id="conversation-ad-alert">
                </div>
                <div id="conversation-ad-body-mask">
                    <div id="conversation-ad-body">
                    </div>
                </div>
                <div class="conversation-ad-scroller down-scroller">
                   &#9660; scroll down 
                </div>
                <div id="conversation-ad-feedback">
                  <span id="conversation-ad-minimizer">-</span>
                  <span>Ask Keith Olbermann a question:</span>
                  <textarea id="conversation-ad-input">I was wondering ... </textarea>
                  <div id="conversation-ad-name">
                    <span>Name:</span>
                    <input id="conversation-ad-name-input" type="text" name="convo_name" val="">
                    <div id="conversation-ad-disclaimer">Note: Your privacy is important to us and we will not share your personal info.</div>
                  </div>
                  <span id="conversation-ad-send">Send</span>
                </div>
            </div>
        </div>
    <script id="conversation-ad-template" type="text/jst">
        <div class="conversation-ad-item">
            <h3 class="byline">
            <span class="byline-text"><%%= pubDate %></span>
            </h3>
            <div class="tpm_inside_hed"><a href="<%%= link  %>"><%%= title  %></a></div>
            <div class="conversation-ad-entry"><%%= description  %></div>
        </div>
    </script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script> 
    <script src="underscore-min.js" type="text/javascript"></script> 
    <script src="json2.js" type="text/javascript"></script> 
    <script src="conversation_ad.js" type="text/javascript"></script> 
    
    </body>

</html>



